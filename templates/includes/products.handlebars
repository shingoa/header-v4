{{#with products}}
	<li>
		<input type="radio" name="xrx_bnrv4_header_nav_primary" value="xrx_bnrv4_products" id="xrx_bnrv4_products" autocomplete="off" aria-hidden="true" />

		<label for="xrx_bnrv4_default" name="&amp;lid=hdr-bar-products-close">{{label}}</label>
		<label for="xrx_bnrv4_products" name="&amp;lid=hdr-bar-products" role="tab" aria-controls="xrx_bnrv4_header_flyout_products">{{label}}</label>

		<div class="xrx_bnrv4_header_flyout" id="xrx_bnrv4_header_flyout_products" role="tabpanel">
			<label for="xrx_bnrv4_default" name="&amp;lid=hdr-bar-products-close">❌</label>

			<div>
				{{> includes/partials/flyout_header}}

				<div class="xrx_bnrv4_table xrx_bnrv4_header_flyout_content">
					<div class="xrx_bnrv4_row">
						{{#with col1}}
							{{> includes/partials/column_links_auto}}
						{{/with}}
						{{#with col2}}
							{{> includes/partials/column_links_auto}}
						{{/with}}
						{{#with col3}}
							{{> includes/partials/column_links_auto}}
						{{/with}}
					</div>
				</div>

			</div>

			{{> includes/partials/flyout_footer}}
		</div>
	</li>
{{/with}}
